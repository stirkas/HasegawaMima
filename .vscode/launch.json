   "version": "0.2.0",
   "configurations": [
      {
         "name": "g++ - Run and Debug",
         "type": "cppdbg",
         "request": "launch",
         "program": "${workspaceFolder}/C/bin/${command:cmake.launchTargetFilename}",
         "args": [],
         "stopAtEntry": false,
         "cwd": "${workspaceFolder}/C/bin",
         "environment": [],
         "externalConsole": false,
         "MIMode": "gdb",
         "setupCommands": [
            {
               "description": "Enable pretty-printing for gdb",
               "text": "-enable-pretty-printing",
               "ignoreFailures": true
            }
         ],
         "miDebuggerPath": "/usr/bin/gdb"
      },
   ]
}